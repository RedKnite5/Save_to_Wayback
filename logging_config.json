{
	"version": 1,
	"formatters": {
		"simple": {
			"()": "stw_logger.STDOutFormatter",
			"url": "url",
			"shorten": false
		},
		"shorten_urls": {
			"()": "stw_logger.STDOutFormatter",
			"url": "url",
			"shorten": true,
			"datefmt": "%b-%d %H:%M:%S"
		}
	},
	"handlers": {
		"stdout": {
			"class": "logging.StreamHandler",
			"level": "INFO",
			"formatter": "shorten_urls",
			"stream": "ext://sys.stdout"
		},
		"file": {
			"class": "logging.handlers.RotatingFileHandler",
			"level": "DEBUG",
			"formatter": "simple",
			"filename": "data/urls_saved.log",
			"maxBytes": 5000000,
			"backupCount": 10
		}
	},
	"loggers": {
		"root": {
			"level": "DEBUG",
			"handlers": ["stdout", "file"]
		}
	}
}